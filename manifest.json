{
	"manifest_version": 2,
	"name": "Tab to Window/Popup - Keyboard Shortcut",
	"short_name": "Tab to Window",
	"version": "3.0.0",
	"author": "Arthur Carabott",

	"description": "Add a keyboard shortcut to move the current tab to a new window or popup.",
	"minimum_chrome_version": "61",

	"icons": {
		"16": "icons/ttw16.png",
		"48": "icons/ttw48.png",
		"128": "icons/ttw128.png"
	},

	"browser_action": {
		"default_title": "Tab to window"
	},

	"background": {
		"page": "background.html",
		"persistent": false
	},

	"commands": {
		"01-tab-to-window-normal": {
			"suggested_key": {
				"default": "Alt+X",
				"linux": "Alt+Shift+X"
			},
			"description": "Window"
		},
		"02-tab-to-window-popup": {
			"suggested_key": {
				"default": "Alt+C",
				"linux": "Alt+Shift+C"
			},
			"description": "Popup"
		},
		"03-tab-to-window-next": {
			"suggested_key": {
				"default": "Alt+Z",
				"linux": "Alt+Shift+Z"
			},
			"description": "Next Window"
		},
		"04-tab-to-window-display": {
			"suggested_key": {
				"default": "Alt+D",
				"linux": "Alt+Shift+D",
				"windows": "Alt+Shift+D"
			},
			"description": "Next Display"
		}
	},
	"permissions": ["tabs", "storage", "system.display", "contextMenus"],
	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}
